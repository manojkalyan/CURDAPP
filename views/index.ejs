<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Records</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        .header {
            background-color: #007bff;
            color: #fff;
            padding: 10px;
            text-align: right;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        select,
        input[type="text"],
        button[type="submit"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
            font-size: 14px;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin-bottom: 20px;
        }

        li input[type="checkbox"] {
            margin-right: 10px;
        }

        /* Media Queries for Responsive Design */
        @media screen and (max-width: 600px) {
            .container {
                max-width: 100%;
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <a class="button" href="/user/signout">Sign Out</a>
        <a class="button" href="/records/create">Create</a>
        <a class="button" href="/records/recordList">List of Records</a>
    </div>
    <div class="container">
        <h1>Records</h1>
        <form action="/records/recordList" method="GET">
            <label for="status">Filter by Status:</label>
            <select name="status" id="status">
                <option value="">All</option>
                <option value="active">Active</option>
                <option value="inactive">Inactive</option>
            </select>
            <label for="name">Search by Name:</label>
            <input type="text" name="name" id="name" placeholder="Search by name">
            <button class="button" type="submit">Apply Filters</button>
        </form>
        <form action="/records/delete" method="POST">
            <ul>
                <% records.forEach(record => { %>
                    <li>
                        <input type="checkbox" name="recordIds" value="<%= record._id %>">
                        <a href="/records/details/<%= record._id %>"><%= record.name %></a>
                        <p><%= record.description %></p>
                    </li>
                <% }) %>
            </ul>
            <button class="button" type="submit" formaction="/records/delete">Delete Selected</button>
        </form>
        <a href="/records/getcreate">Create New Record</a>
    </div>
</body>
</html>
